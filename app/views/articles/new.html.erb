<h1>
  Create New Article
</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |x| %>
      <li><%= x %></li>
    <% end %>
  </ul>
  <% end %>

  <p>
    <%= f.submit %>
  </p>

<% end %>